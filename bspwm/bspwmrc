#!/bin/sh

sxhkd &

bspc config border_width        4
bspc config window_gap          20
bspc config top_padding         50
bspc config left_padding        15
bspc config right_padding       15
bspc config bottom_padding      15

bspc config split_ratio                       0.5
bspc config focus_follows_pointer             true
bspc config pointer_follows_focus             true
bspc config pointer_follows_monitor           true

bspc config focused_border_color "#eeeeee"
bspc config active_border_color "#eeeeee"
bspc config normal_border_color "#212121"

bspc monitor -d 1 2 3 4 5 6 7 8 9 0

xsetroot -cursor_name left_ptr

feh --bg-fill /home/kabir/Pictures/bg.jpg

compton &
/home/kabir/.local/bin/panel &
